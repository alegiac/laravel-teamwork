{
  "name": "ciromattia/teamwork",
  "description": "PHP wrapper for the Teamwork project management API",
  "keywords": [
    "teamwork",
    "api",
    "laravel",
    "project management"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Ross Edman",
      "email": "ross.edman@gmail.com"
    },
    {
      "name": "Ciro Mattia Gonano",
      "email": "ciromattia.gonano@marketingarena.it"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "guzzlehttp/guzzle": "~6.3"

  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "mockery/mockery": "^1.0"
  },
  "autoload": {
    "psr-0": {
      "Ciromattia\\Teamwork\\": "src"
    }
  },
  "suggest": {
    "illuminate/support": "Required for Laravel support"
  },
  "extra": {
    "laravel": {
        "providers": [
            "Ciromattia\\Teamwork\\TeamworkServiceProvider"
        ],
        "aliases": {
            "Bar": "Ciromattia\\Teamwork\\Facades\\Teamwork"
        }
    }
  },
  "minimum-stability": "stable"
}
